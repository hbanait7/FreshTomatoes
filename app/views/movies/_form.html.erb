<%= form_for @movie do |f| %>

  <% if @movie.errors.any? %>

    <h3>Please fix the following <%= pluralize(@movie.errors.count, 'error') %>:</h3>

    <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>

  <% end %>

  <%= f.label :title %>:
  <%= f.text_field :title %><br />

  <%= f.label :genre %>:
  <%= f.text_field :genre %><br />

  <%= f.label :release_date %>:
  <%= f.date_field :release_date %><br />

  <%= f.label :director %>:
  <%= f.text_field :director %><br />

  <%= f.label :actors %>:
  <%= f.text_field :actors %><br />

  <%= f.label :poster %>:
  <%= f.file_field :poster %><br /> 

  <%= f.label :description %>:<br />
  <%= f.text_area :description, size: '60x10' %><br />

  <%= f.submit 'Submit' %> 

<% end %>