<h1>Sign Up</h1>

<%= form_for @user do |f| %>

  <% if @user.errors.any? %>

    <h3>Please fix the following <%= pluralize(@user.errors.count, 'error') %>:</h3>

    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>

  <% end %>

  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :email %>:
  <%= f.email_field :email %><br />

  <%= f.label :password %>:
  <%= f.password_field :password %><br />

  <%= f.label :password_confirmation %>:
  <%= f.password_field :password_confirmation %><br />

  <%= f.submit 'Submit' %>

<% end %>